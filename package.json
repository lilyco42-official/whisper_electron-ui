"build": {
  "appId": "com.yourname.whisper-electron-ui",
  "productName": "Whisper Electron UI",
  "directories": {
    "output": "release"
  },
  "files": [
    "main.js",
    "preload.js",
    "renderer.js",
    "index.html"
  ],
  "extraResources": [
    {
      "from": "whisper",
      "to": "whisper",
      "filter": ["**/*"]
    }
  ],
  "scripts": {
    "dist": "electron-builder"
  }
  "win": {
    "target": "nsis",
    // "icon": "build/icon.ico"  // 如果有图标，请放置；否则可删除该行
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  }
}
